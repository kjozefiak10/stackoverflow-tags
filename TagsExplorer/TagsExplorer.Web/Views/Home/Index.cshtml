@model IEnumerable<TagsExplorer.Web.Models.TagViewModel>
@{
    ViewData["Title"] = "StackOverflow tags";
}


<div class="row">
    <div class="col-sm-12">
        <h3>StackOverflow top @Model.Count() tags</h3>
        <table class="table table-responsive table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Name</th>
                    <th>Usage count</th>
                    <th>Percentage usage</th>
                </tr>
            </thead>
            <thead>
                @{ int i = 0; }
                @foreach (TagViewModel tag in Model.OrderByDescending(t => t.UsageCount))
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@tag.Name</td>
                        <td>@tag.UsageCount</td>
                        <td>@tag.UsagePercentage</td>
                    </tr>
                }
            </thead>
        </table>
    </div>
   
</div>
